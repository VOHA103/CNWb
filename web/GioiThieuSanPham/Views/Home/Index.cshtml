@model GioiThieuSanPham.Models.index
@using GioiThieuSanPham.Models
@{
    ThuVien tv = new ThuVien();
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Block content - Đục lỗ trên giao diện bố cục chung, đặt tên là `content` -->
<!-- Carousel - Slider -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1" class=""></li>
        <li data-target="#myCarousel" data-slide-to="2" class=""></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
<img src="~/Content/assets/images/e80a2ac3431b8845d10a.jpg" />
            <div class="container">
                <div class="carousel-caption text-left">
                    <h1>Nền Tảng - Nơi Xem chi tiết tuyệt vời</h1>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img style="width:100%;" src="https://img4.thuthuatphanmem.vn/uploads/2020/06/26/mau-banner-dien-may-hang-tu-lanh_033706622.jpg">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Hàng triệu sản phẩm - Lựa chọn mỏi tay</h1>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img style="width:100%;" src="https://img4.thuthuatphanmem.vn/uploads/2020/06/26/hinh-mau-banner-dien-may_033706200.jpg">
            <div class="container">
                <div class="carousel-caption text-right">
                    <h1>Chất lượng là Hàng đầu.</h1>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Tính năng Marketing -->
<div class="container marketing">
    <!-- Three columns of text below the carousel -->
    <div class="row">
        <div class="col-lg-4">
            <img class="bd-placeholder-img rounded-circle" width="140" height="140"
                 src="~/Content/assets/img/icon/icon-1.png">
            <h2>Đặt hàng</h2>
            <p>Chọn sản phẩm bạn yêu thích, và Lưu chúng.</p>
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-4">
            <img class="bd-placeholder-img rounded-circle" width="140" height="140"
                 src="~/Content/assets/img/icon/icon-2.png">
            <h2>Tạo đơn hàng</h2>
            <p>Theo dõi đơn hàng của bạn.</p>
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-4">
            <img class="bd-placeholder-img rounded-circle" width="140" height="140"
                 src="~/Content/assets/img/icon/icon-3.png">
            <h2>Gửi Mail</h2>
            <p>Thôg báo sản phẩm đến cho bạn</p>
        </div><!-- /.col-lg-4 -->
    </div><!-- /.row -->
    <!-- START THE FEATURETTES -->
    <hr class="featurette-divider">
    <div class="row featurette">
        <div class="col-md-7">
            <h2 class="featurette-heading">
                Xem Hàng, Tạo đơn hàng, Gửi Email <span class="text-muted">
                    Nhanh
                    chóng
                </span>
            </h2>
            <p class="lead">Nơi Xem sản phẩm tuyệt vời cho mọi lứa tuổi.</p>
        </div>
        <div class="col-md-5">
            <img src="~/Content/assets/img/marketing/marketing-1.png">
        </div>
    </div>

    <hr class="featurette-divider">
    <div class="row featurette">
        <div class="col-md-7 order-md-2">
            <h2 class="featurette-heading">
                Trải nghiệm tuyệt vời <span class="text-muted">
                    Theo dõi đơn
                    hàng của
                    bạn.
                </span>
            </h2>
            <p class="lead">Hệ thống theo dõi đơn hàng chi tiết, thông tin mọi lúc mọi nơi.</p>
        </div>
        <div class="col-md-5 order-md-1">
            <img src="~/Content/assets/img/marketing/marketing-2.png">
        </div>
    </div>

    <hr class="featurette-divider">
    <!-- /END THE FEATURETTES -->
</div>

<!-- Danh sách sản phẩm -->
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Danh sách Sản phẩm</h1>
        <p class="lead text-muted">
            Các sản phẩm với chất lượng, uy tín, cam kết từ nhà Sản xuất, phân phối và
            bảo hành
            chính hãng.
        </p>
    </div>
</section>

<!-- Giải thuật duyệt và render Danh sách sản phẩm theo dòng, cột của Bootstrap -->
<div class="danhsachsanpham py-5 bg-light">
    <div class="container">
        @foreach (var item in Model.danhmuc)
        {
            <div class="row">
                <div class="col-12 mb-5 text-center">
                    <a href="~/@item.tenkhongdau"><h3 class="pb-2" style="border-bottom: 2px solid #cdcdcd;">@item.TEN</h3></a>
                </div>
                <hr>
                @for(int i=0;i<Model.sanpham.Count();i++)
                {
                    if (Model.sanpham[i].MADM == item.MADM)
                    {
                        if(i==9)
                        {
                            break;
                        }    
                <div class="col-md-3 col-lg-3 col-sm-6">
                    <a class="card mb-3 d-flex" style="justify-content: stretch;text-decoration: none;color:#333;" href="~/@item.tenkhongdau/@Model.sanpham[i].TENKHONGDAU">
                        <img class="card-img-top" src="~/Content/assets/images/@Model.sanpham[i].HINHDAIDIEN" alt="">
                        <div class="card-body d-flex" style="flex-direction: column;">
                            <h5 class="card-title">@Model.sanpham[i].TENSANPHAM</h5>
                            <span class="card-text text-secondary">@Model.sanpham[i].MOTA </span>
                            <b class="text-danger">@tv.convertVND(Model.sanpham[i].GIABAN.ToString())</b>
                        </div>
                    </a>
                </div>
                    }
                }
            </div>
        }

    </div>
</div>

<!-- End block content -->