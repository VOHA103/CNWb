                    <div class="checkbox">
                        @Html.EditorFor(model => model.TRANGTHAI)
                        @Html.ValidationMessageFor(model => model.TRANGTHAI, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MOTA2, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <textarea name="MOTA2">@Model.MOTA2</textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-outline-info">     @Html.ActionLink("Back to List", "Index")</button>

                </div>
            </div>
        </div>
        }


    </div>
    <script>
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            $('#imgUser').attr('src', `~/img/user/${fileName}`)
        });
        CKEDITOR.replace('MOTA2');
    </script>
</body>
</html>
