@model IEnumerable<GioiThieuSanPham.Models.SANPHAM>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Required meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/vendor/bootstrap/css/bootstrap.min.css" type="text/css">
    <style>
        table tr th{
            white-space:nowrap;
        }
    </style>
    <title>QL_SanPham</title>
</head>
<body>
    <div class="container">
        <h2>
            <b>QL_SANPHAM</b><br />

        </h2>
        <p>

            @Html.ActionLink("Create ", "Create", null, new { @class = "btn btn-outline-primary" })
        </p>
        <div class="table-responsive">
            <table style="text-align:center;" class="table table-hover . table-striped table-bordered">
                <tr>
                    <th>
                          Hình Ảnh SP
                    </th>
                    <th>
                        Tên sản phẩm
                    </th>
                    <th>
                        Hãng sản xuất
                    </th>
                    <th>
                        Mô tả
                    </th>
                    <th>
                        Đơn giá
                    </th>
                    <th>
                        Số lượng
                    </th>
                    <th>
                        Trạng thái
                    </th>
                    <th>
                        Danh mục
                    </th>
                    <th>
                        <b>Công cụ</b>
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:100px">
                            <img style="max-width:100%;" src="~/Content/assets/images/@item.HINHDAIDIEN" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TENSANPHAM)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HANGSX)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MOTA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GIABAN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SOLUONG)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TRANGTHAI)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DANHMUC.TEN)
                        </td>
                        <td>

                            <button type="button" style="width: 73px;" class="btn btn-outline-info">  @Html.ActionLink("Edit", "Edit", new { id = item.ID })</button>
                            <button type="button" class="btn btn-outline-info">  @Html.ActionLink("Delete", "Delete", new { id = item.ID })</button>

                        </td>
                    </tr>
                }

            </table>
        </div>
        </div>
</body>
   

</html>

